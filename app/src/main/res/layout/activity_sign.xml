<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activityview.SignInActivity">


    <LinearLayout
        android:id="@+id/layoutSign"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_width="375dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_marginBottom="55dp"
            android:background="@drawable/logo" />


        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="60dp"

            android:layout_marginBottom="20dp"
            android:background="@drawable/background_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/signEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="2dp"
                android:background="@drawable/background_shape"
                android:backgroundTint="@color/light"
                android:hint="Mail Adresiniz"
                android:inputType="text"
                android:paddingStart="25dp"
                android:paddingEnd="25dp" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="360dp"
            android:layout_height="60dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/background_shape"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/passwordEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="2dp"
                android:background="@drawable/background_shape"
                android:backgroundTint="@color/light"
                android:hint="Şifreniz"
                android:inputType="textPassword"
                android:paddingStart="25dp"
                android:paddingEnd="25dp" />

        </FrameLayout>


        <Button
            android:id="@+id/signButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Giriş Yap"
            android:textAllCaps="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Kayıtlı Bir Hesabın Yok Mu? Kayıt Ol.."
            android:textAlignment="center"
            android:textColor="@color/dark_green" />

        <Button
            android:id="@+id/googleButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/googleg_standard_color_18"
            android:text="Google Sign In"
            android:textAllCaps="false"
            android:textColor="@color/dark_green" />

    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/ikinci"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
